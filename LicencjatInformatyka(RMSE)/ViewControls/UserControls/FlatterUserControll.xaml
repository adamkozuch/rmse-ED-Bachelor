<UserControl x:Class="LicencjatInformatyka_RMSE_.ViewControls.UserControls.FlatterUserControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModelFolder="clr-namespace:LicencjatInformatyka_RMSE_.ViewModelFolder"
             mc:Ignorable="d" 
            d:DesignWidth="188" d:DesignHeight="449" d:DataContext="{d:DesignInstance viewModelFolder:ViewModel}">

    <Grid x:Name="LayoutRoot">
        <Button IsEnabled="{Binding ButtonsLogic.ConclusionEnabled}" Command="{Binding BasesCommandsProperty.OpenFlatterWindow}"  Content="{Binding ChildWindowsLanguageConfig.FlatternOneRuleText}" HorizontalAlignment="Left" Height="35.144" Margin="10,10,0,0" VerticalAlignment="Top" Width="168"/>
        <Button IsEnabled="{Binding ButtonsLogic.ConclusionEnabled}" Command="{Binding BasesCommandsProperty.FlatterAllRules}"  Content="{Binding ChildWindowsLanguageConfig.FlatternAllRulesText}" HorizontalAlignment="Left" Height="35.144" Margin="10,50.144,0,0" VerticalAlignment="Top" Width="168" />
    </Grid>
</UserControl>
