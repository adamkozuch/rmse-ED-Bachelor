<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModelFolder="clr-namespace:LicencjatInformatyka_RMSE_.ViewModelFolder"
	mc:Ignorable="d"
	x:Class="LicencjatInformatyka_RMSE_.AdviceUserControl"
	x:Name="UserControl"
	d:DesignWidth="188" d:DesignHeight="449" d:DataContext="{d:DesignInstance viewModelFolder:ViewModel}">

    <Grid x:Name="LayoutRoot">
        <Button Content="{Binding MainWindowLanguageConfig.OpenAdviceBase}" Command="{Binding  BasesCommandsProperty.OpenAdviceBaseCommand}" HorizontalAlignment="Left" Height="35.144" Margin="10,10,0,0" VerticalAlignment="Top" Width="168"/>
        <Button Content="{Binding MainWindowLanguageConfig.LoadFolderWithAdvices}" Command="{Binding BasesCommandsProperty.OpenAdviceFolderCommand}" HorizontalAlignment="Left" Height="35" Margin="10,50,0,0" VerticalAlignment="Top" Width="168"/>
    </Grid>
</UserControl>