<Window x:Class="LicencjatInformatyka_RMSE_.ViewControls.BrowseControls.BrowseRules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModelFolder="clr-namespace:LicencjatInformatyka_RMSE_.ViewModelFolder"
        mc:Ignorable="d"
        Title="{Binding ChildWindowsLanguageConfig.BrowseRulesWindowName}" Height="300" Width="300" d:DataContext="{d:DesignInstance viewModelFolder:ViewModel}">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding RuleListProp }" SelectedItem="{Binding SelectedRule }" HorizontalAlignment="Left" Height="233" VerticalAlignment="Top" Width="291" Margin="5,5,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding ChildWindowsLanguageConfig.BrowseRulesRuleNumber}" Binding="{Binding NumberOfRule}"></DataGridTextColumn>
                <DataGridTextColumn Header="{Binding ChildWindowsLanguageConfig.BrowseRulesConclusionName}" Binding="{Binding Conclusion}"></DataGridTextColumn>
                <DataGridTextColumn Header="{Binding ChildWindowsLanguageConfig.BrowseRulesConditionsName}" Binding="{Binding Conclusion}"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
